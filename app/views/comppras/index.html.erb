<p id="notice"><%= notice %></p>

<h1>Comppras</h1>

<table>
  <thead>
    <tr>
      <th>Fecha compra</th>
      <th>Monto</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comppras.each do |comppra| %>
      <tr>
        <td><%= comppra.fecha_compra %></td>
        <td><%= comppra.monto %></td>
        <td><%= comppra.cliente %></td>
        <td><%= link_to 'Show', comppra, class: 'button radius' %></td>
        <td><%= link_to 'Edit', edit_comppra_path(comppra), class: 'button radius success' %></td>
        <td><%= link_to 'Destroy', comppra, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

